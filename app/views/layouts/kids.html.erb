        <%#= @website&.section_named("catchy_info")&.element_named("Profile Video") %>
      </div>

      <div class="catchy-info-right d-flex flex-column justify-content-center pl-5">
        <%#= @website&.section_named("catchy_info")&.element_named("One") %>
